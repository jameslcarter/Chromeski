<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Platforms>AnyCPU</Platforms>
    <AssemblyVersion>0.9.0.0</AssemblyVersion>
    <FileVersion>0.9.0.0</FileVersion>
    <Version>0.9.0.0-pre01</Version>
    <Authors>Kola Oyewumi</Authors>
    <Company>Kola Oyewumi</Company>
    <PackageTags>Cef Chromium HTML5 Desktop Chromely CefGlue CefSharp Restful  Ajax HTTP XHR MessageRouter JavascriptIntegration NetStandard .NET Core</PackageTags>
    <Description>This is a .NET Standard library. It is the base/core library required to build either Chromely CefSharp or Chromely CefGlue apps. It has all the common features and functionalities for both both types of apps on either Windows or Linux.</Description>
    <Copyright>Copyright 2017 Kola Oyewumi</Copyright>
    <PackageLicenseUrl>https://github.com/mattkol/Chromely/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/mattkol/Chromely</PackageProjectUrl>
    <PackageIconUrl>https://github.com/mattkol/Chromely/blob/master/nugets/chromely.ico?raw=true</PackageIconUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>- Changes to ChromelyConfiguration - breaking changes
- Made Cef Setting properties configurable
- Added option to add extra command line arguments
- Added local resource scheme handling
- Added custom handling via handler registration

</PackageReleaseNotes>
    <RepositoryUrl>https://github.com/mattkol/Chromely</RepositoryUrl>
    <RepositoryType>Github Repository</RepositoryType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DocumentationFile>bin\Debug\netstandard2.0\Chromely.Core.xml</DocumentationFile>
  </PropertyGroup>
 
</Project>